@using RealEstateManager.Utils
@model RealEstateManager.Models.Agent.AgentLoginModel

@{
    ViewBag.Title = Localization.GetString("AgentLoginPage_Title");
}

@Html.ValidationSummary(true, null, new { @class = "text-danger" })

@using (Html.BeginForm(new { returnUrl = ViewBag.ReturnUrl }))
{
    @Html.AntiForgeryToken()
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h3>@Localization.GetString("AgentLoginForm_Header")</h3>
        </div>
        <div class="card-body bg-light">
            <div class="form-group">
                @Html.LabelFor(x => x.EmailAddress)
                @Html.EditorFor(x => x.EmailAddress, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(x => x.EmailAddress, null, new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.Password)
                @Html.PasswordFor(x => x.Password, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.Password, null, new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <div class="custom-control custom-checkbox">
                    @Html.EditorFor(x => x.RememberMe, new { htmlAttributes = new { @class = "custom-control-input" } })
                    @Html.LabelFor(x => x.RememberMe, new { @class = "custom-control-label" })
                </div>
                @Html.ValidationMessageFor(x => x.RememberMe, null, new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">@Localization.GetString("AgentLoginForm_SubmitButtonText")</button>
                @Html.ActionLink(Localization.GetString("AgentLoginForm_ForgottenPassword"), "ForgottenPassword")
            </div>
        </div>
    </div>
}
