@using RealEstateManager.Utils
@model RealEstateManager.Models.Estate.EstateDeletionModel

@{
    ViewBag.Title = Localization.GetString("EstateDeletePage_Title");
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h3>@Localization.GetString("EstateDeletePage_Header")</h3>
        </div>
        <div class="card-body bg-light">
            <p>@Localization.GetString("EstateDeletePage_Text")</p>
            <div class="form-group">
                @Html.HiddenFor(x => x.Id)
                @Html.HiddenFor(x => x.BuildingInfoId)
                @for (var i = 0; i < Model.EstateAgents.Count; i++)
                {
                    @Html.HiddenFor(x => Model.EstateAgents[i].EstateId);
                    @Html.HiddenFor(x => Model.EstateAgents[i].UserId);
                    @Html.HiddenFor(x => Model.EstateAgents[i].HasRights);
                    @Html.HiddenFor(x => Model.EstateAgents[i].Username);
                }
            </div>
            <button type="submit" class="btn btn-primary">@Localization.GetString("Button_Delete")</button>
            <br />
            @Html.ValidationSummary(true, null, new { @class = "text-danger" })
        </div>
    </div>
}
