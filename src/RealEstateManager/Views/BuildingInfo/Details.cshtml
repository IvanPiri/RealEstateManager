@using RealEstateManager.Utils
@model RealEstateManager.Models.BuildingInfo.BuildingInfoGetModel

@{
    ViewBag.Title = Localization.GetString("BuildingInfoDetailsPage_Title");
}

@using (Html.BeginForm())
{
    <p>
        @Html.LabelFor(x => x.View):
        @CustomEnumHelper.GetLocalizedName(Model.View)
    </p>
    <p>
        <div class="custom-control custom-checkbox">
            @Html.CheckBoxFor(x => x.Act16, new { @class = "custom-control-input", disabled = "disabled" })
            @Html.LabelFor(x => x.Act16, new { @class = "custom-control-label" })
        </div>
    </p>
    <p>
        @Html.LabelFor(x => x.Floors):
        @Html.DisplayFor(x => x.Floors)
    </p>
    <p>
        @Html.LabelFor(x => x.Bedrooms):
        @Html.DisplayFor(x => x.Bedrooms)
    </p>
    <p>
        @Html.LabelFor(x => x.Bathrooms):
        @Html.DisplayFor(x => x.Bathrooms)
    </p>
    <p>
        @Html.LabelFor(x => x.Balconies):
        @Html.DisplayFor(x => x.Balconies)
    </p>
    <p>
        @Html.LabelFor(x => x.Garages):
        @Html.DisplayFor(x => x.Garages)
    </p>
}
