@using RealEstateManager.Utils
@model RealEstateManager.Areas.Public.Models.Estate.EstateGetModel

@{
    ViewBag.Title = Localization.GetString("EstateIndexPage_Title");
}

<div class="card">
    <div class="card-header bg-primary text-white">
        <h3>@Localization.GetString("EstateDetailsPage_Header")</h3>
    </div>
    <div class="card-body bg-light">
        <div class="jumbotron jumbotron-padding">
            <h1 class="display-4">@Model.Name</h1>
            <p class="lead">@Localization.GetString("EstateIndexPage_EstateType") @CustomEnumHelper.GetLocalizedName(Model.Type)</p>
            <p class="lead">@Localization.GetString("EstateIndexPage_EstateStatus") @CustomEnumHelper.GetLocalizedName(Model.Status)</p>
            <hr class="my-4">

            <p class="lead">
                @Html.LabelFor(x => x.Area):
                @Html.DisplayFor(x => x.Area)
                @Localization.GetString("EstateIndexPage_AreaSign")
            </p>
            <p class="lead">
                @Html.LabelFor(x => x.Price):
                @Html.DisplayFor(x => x.Price)
                @Localization.GetString("EstateIndexPage_MoneySign")
            </p>
            <p class="lead">
                @Html.LabelFor(x => x.Address):
                @Html.DisplayFor(x => x.Address)
            </p>
            @if (Model.BuildingInfo != null)
            {
                @Html.Partial("~/Areas/Public/Views/BuildingInfo/Details.cshtml", Model.GetBuildingInfoModel())
            }
            <p>@Html.DisplayFor(x => x.PublicDescription)</p>
        </div>
    </div>
</div>
