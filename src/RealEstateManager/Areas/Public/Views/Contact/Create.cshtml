@using RealEstateManager.Utils
@using RealEstateManager.Models.Data;
@model RealEstateManager.Areas.Public.Models.Contact.ContactCreationModel

@{
    ViewBag.Title = Localization.GetString("ContactCreationPage_Title");
}

@using (Html.BeginForm("Create", "Contact", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h3>@Localization.GetString("ContactCreationPage_Header")</h3>
        </div>
        <div class="card-body bg-light">
            @Html.HiddenFor(x => x.EstateId)
            <div class="form-group">
                @Html.LabelFor(x => x.ContactDateTime)
                @Html.EditorFor(x => x.ContactDateTime, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(x => x.ContactDateTime, null, new { @class = "text-danger" })
            </div>
            <button type="submit" class="btn btn-primary">@Localization.GetString("Button_Create")</button>
            <br />
            @Html.ValidationSummary(true, null, new { @class = "text-danger" })
        </div>
    </div>
}
